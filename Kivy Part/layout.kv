ScreenManager:
    id:src_manager

    Main_screen:
        name: 'main_screen'

    Login_screen:
        name: 'login_screen'

    Config_screen:
        name: 'config_screen'

<Main_Screen>:
    name: 'main_screen'

    MDRaisedButton:
        text: 'Config'
        icon: 'settings'
        # pos is let top of the screen
        pos_hint: {"top": 1, "left": 0}
        on_release: root.open_config()

    MDCard:
        size_hint: 0.85, 0.85
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        padding: 10


<Login_screen>:
    name: 'login_screen'
    
    MDCard:
        size_hint: 0.9, 0.9
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        padding: 10
        # change the color of the card

        #add a 3x4 keyboard with numbers from 0 to 9 and backspace and enter

        MDGridLayout:
            cols: 3
            rows: 4
            padding: 10
            spacing: 10

            # it will be buttons
            