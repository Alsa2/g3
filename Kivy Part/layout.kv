ScreenManager:
    id:src_manager

    Main_screen:
        name: 'main_screen'

    Login_screen:
        name: 'login_screen'

    Config_screen:
        name: 'config_screen'



<Main_Screen>:
    name: 'main_screen'
    FitImage:
        source: "assets/background.jpg"
        # change the size of the image
        size_hint: 1, 1
        # change the position of the image
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}



    # create a button on the top left of the screen with the name config
    MDBoxLayout:
        orientation: "vertical"
        padding: "8dp"
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        

        MDRaisedButton:
            text: "Config"
            # to the left of the screen
            on_release: src_manager.current = 'config_screen'

        MDCard:
            size_hint: 0.85, 0.85
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            orientation: 'vertical'
            padding: 10
            #make the card a bit transparent
            opacity: 0.3


            MDBoxLayout:
                orientation: "vertical"
                
                padding: "8dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDLabel:
                    text: "Fast Feedback"
                    halign: "center"
                    font_style: "H4"
                
                MDLabel:
                    text: "Vegetables"
                    halign: "center"
                    font_style: "H5"

                MDBoxLayout:
                    orientation: "horizontal"
                    padding: 10
                    MDRaisedButton:
                        text: ":("
                        size_hint_x: 0.33

                    MDRaisedButton:
                        text: ":|"
                        size_hint_x: 0.33

                    MDRaisedButton:
                        text: ":)"
                        size_hint_x: 0.33


                MDLabel:
                    text: "Meat"
                    halign: "center"
                    font_style: "H5"
                
                MDBoxLayout:
                    orientation: "horizontal"
                    padding: 10
                    MDRaisedButton:
                        text: ":("
                        size_hint_x: 0.33

                    MDRaisedButton:
                        text: ":|"
                        size_hint_x: 0.33

                    MDRaisedButton:
                        text: ":)"
                        size_hint_x: 0.33

                MDLabel:
                    text: "Dessert"
                    halign: "center"
                    font_style: "H5"

                MDBoxLayout:
                    orientation: "horizontal"
                    padding: 10
                    MDRaisedButton:
                        text: ":("
                        size_hint_x: 0.33

                    MDRaisedButton:
                        text: ":|"
                        size_hint_x: 0.33

                    MDRaisedButton:
                        text: ":)"
                        size_hint_x: 0.33

<Login_screen>:
    name: 'login_screen'
    
    MDCard:
        size_hint: 0.9, 0.9
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        padding: 10
        # change the color of the card

        #add a 3x4 keyboard with numbers from 0 to 9 and backspace and enter

        MDGridLayout:
            cols: 3
            rows: 4
            padding: 10
            spacing: 10

