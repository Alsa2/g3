                            size_hint_y: 1

                        MDRaisedButton:
                            text: ":)"
                            size_hint_x: 0.33
                            size_hint_y: 1


                MDBoxLayout:
                    orientation: "vertical"
                    padding: 10

                    MDLabel:
                        text: "Meat"
                        halign: "center"
                        font_style: "H5"

                    MDBoxLayout:
                        orientation: "horizontal"
                        MDRaisedButton:
                            text: ":("
                            size_hint_x: 0.33
                            size_hint_y: 1

                        MDRaisedButton:
                            text: ":|"
                            size_hint_x: 0.33
                            size_hint_y: 1

                        MDRaisedButton:
                            text: ":)"
                            size_hint_x: 0.33
